<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zubb.jannarongj.z_retail.QueueList"
    tools:showIn="@layout/activity_queue_list">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <EditText
            android:id="@+id/searchBox"
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:layout_weight="0.86"
            android:background="#5d5d5d"
            android:gravity="center_horizontal"

            android:hint="เลขที่คิว"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00a955"
            android:text="GO"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/btn2">

        <ToggleButton
            android:id="@+id/tgg1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/toggle1" />

        <ToggleButton
            android:id="@+id/tgg2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/toggle2" />

        <ToggleButton
            android:id="@+id/tgg3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/toggle3" />

        <ToggleButton
            android:id="@+id/tgg4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/toggle4" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn2"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/lstdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lstdo"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggleP8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFC107"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textOff="P1"
                android:textOn="P8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/allcbtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="ปิดจบจากทะเบียน"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/pbbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="240dp" />
    </LinearLayout>


</RelativeLayout>
