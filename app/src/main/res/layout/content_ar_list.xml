    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8E8E8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_u"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:background="@android:drawable/ic_lock_lock"
                android:visibility="gone" />

            <TextView
                android:id="@+id/seq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E8E8E8"
                android:gravity="center"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_noship"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no ship"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carlicense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#fbc6ff"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lib"
            android:layout_below="@+id/li1"
            android:visibility="gone"
            android:layout_weight="1" />

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lib"
            android:layout_below="@+id/li1"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />



        <LinearLayout
            android:id="@+id/lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvb"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/closedBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ADADAD"
                android:enabled="false"
                android:text="ปิดจบเรียบรอยแล้ว"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/closeBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ปิดจบ"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/pbbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="240dp" />
    </LinearLayout>
</RelativeLayout>
