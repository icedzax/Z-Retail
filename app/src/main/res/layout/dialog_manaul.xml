<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_adjust"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/ladj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/marktx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="marktx"
                android:textAlignment="center"
                android:textColor="#2135b1"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_hn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-2dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <EditText
                android:id="@+id/ed_hn"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="เลขที่ HN."
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_bun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:ems="10"
                android:hint="มัดที่"
                android:inputType="numberSigned"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_adj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-2dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <EditText
                android:id="@+id/ed_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="จำนวนเส้น"
                android:inputType="numberSigned"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เส้น"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_hist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="55sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mbtnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00a955"
                android:gravity="center"
                android:text="ตกลง"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mbtnCan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fd3f43"
                android:gravity="center"
                android:text="ยกเลิก"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
